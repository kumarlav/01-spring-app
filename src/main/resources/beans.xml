<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   <bean id = "credit" class = "com.king.beans.CreditCardPayment" />
   
   <bean id = "debit" class = "com.king.beans.DebitCardPayment" />
   
   <bean id = "paymentProcessor" class = "com.king.beans.PaymentProcessor" >
   		<constructor-arg ref = "debit" />
   		<property name="payment" ref="credit"></property>
   		<!-- <property name="payment" ref="debit"></property> -->
   </bean>
   
</beans>